<h1>Log:<%= @log %> (<%= @env %>)</h1>

<div id="file-list center">
  更新時刻 ： <%= Time.now.strftime('%Y-%m-%d %H:%M:%S') %> (<%= timeago_tag Time.zone.now, :nojs => true, :limit => 10.days.ago, :lang => :ja %>)
  <a href="/show/db" id="reload_btn">表示を更新する</a>
  <%= check_box_tag 'autoRefresh', true, @refresh, {:id => "refresh"} %>自動更新 (<span id="interval_msec"></span>)
  <div><button class="wg-external-csv-export-button" data-grid-name="grid">CSV エクスポート (utf-8)</button></div>
  <br>
  表示<%= select_tag('perPage',
  	  options_for_select([
  	    ['2', '4'],
	    ['5', '5'],
	    ['10', '10'],
	    ['20', '20'],
	    ['50', '50'],
	    ['100', '100'],
	    ['200', '200'],
	    ['400', '400'],
	    ['1000', '1000']
	  ],
	  @perPage.to_i),
	  {:id => 'perPage'})
	  %>件
  <%= render 'grid_grid' %>
</div>
