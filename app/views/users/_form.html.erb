<%= simple_form_for @user,  wrapper: :horizontal_form, html: {class: 'form-horizontal'}  do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :tel %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <label class="password optional col-sm-3 control-label"></label>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", :back, {:class=>"btn btn-default btn-primary"} %>
<% end %>
