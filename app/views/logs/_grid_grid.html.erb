<%- require 'date' -%>

<%=
   grid(@operationallogs, show_filters: :when_filtered) do |g|
       g.column name: 'id', attribute: "id", filter_type: :range do |row|
         row.id
       end

       g.column name: 'status', attribute: 'status' do |row|
         row.status
       end

       g.column name: '日時(created)', attribute: 'created_at', helper_style: :calendar do |row|
         [row.created_at.strftime("%Y年 %m月 %d日"),
          {:style => 'white-space: nowrap;'}
         ]
       end

       #g.column name: '日時(updated)', attribute: 'created_at', helper_style: :standard do |row|
       #  [row.updated_at.to_s(:db),
       #   {:style => 'white-space: nowrap; width: 400px;'}
       #  ]
       #end

       g.column name: 'メッセージ', attribute: 'message' do |row|
         [row.message,
          {:style => 'width: 400px;'}
         ]
       end
     end
%>
